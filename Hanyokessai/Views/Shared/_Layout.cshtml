@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 汎用決裁</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white box-shadow mb-3 ">
            
            <div class="container navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1 ml-auto">
                    @if (Context.Session.GetString("memberId") != null)
                    {
                        <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="Za100" asp-action="event_initial">汎用決裁 システム</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="Za200" asp-action="event_initial">汎用決裁 システム</a>
                        </li>
                    }
                </ul>
            </div>
            @if (Context.Session.GetString("memberId") != null)
            {
                <div class="d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 mr-auto">
                        <li class="nav-item">
                            <a class="btn btn-light" asp-area="" asp-controller="Za200" asp-action="event_initial">ログアウト</a>
                        </li>
                    </ul>
                </div>
            }
            </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <small> Copyright (C) 2020 (株)IPSG TSGH  - 汎用決裁 システム -</small>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
