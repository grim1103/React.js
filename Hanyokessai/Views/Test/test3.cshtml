@model Hanyokessai.Models.Data
@{
    ViewData["Title"] = "Test3";
}
<div class="text-center">
    <h1 class="display-4">汎用決裁テスト</h1>
    <h2>会員登録ページ</h2>

    <form class="form-horizontal" method="post" asp-controller="Test" asp-action="Test5">
        <div class="form-group">
            <label>ID</label>
            <input type="text" class="form-control" asp-for="id" placeholder="ID 入力">
        </div>

        <div class="form-group">
            <label>氏名</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="氏名 入力">
        </div>

        <div class="form-group">
            <label>年齢</label>
            <input type="text" class="form-control" asp-for="Age" placeholder="年齢 入力">
        </div>

        <div class="form-group">
            <label>電話番号</label>
            <input type="text" class="form-control" asp-for="Phone" placeholder="電話番号 入力">
        </div>

        <div class="form-group">
            <label>E-mail</label>
            <input type="text" class="form-control" asp-for="Email" placeholder="E-mail 入力">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">会員登録</button>
            <a class="btn btn-warning" href="#">キャンセル</a>
        </div>

    </form>
    <br>
    <a class="nav-link text-dark" asp-area="" asp-controller="Test" asp-action="index">戻る(index ページ)</a>
    <br>
</div>