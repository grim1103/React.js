@model Hanyokessai.Models.Ta300Dto
@{ ViewData["Title"] = "テンプレート照会"; }
<script type="text/javascript">
    function deleteConfirm() {
        var deleteFlg = confirm("削除でよろしいでしょうか？");
        if (deleteFlg == true) {
            $("#deleteForm").submit();
        }
    };
    </script>
<style>
    .table-powder-blue {
        background-color: #bedbe9
    }
    .border-hidden {
        border-right: hidden !important;
        border-left: hidden !important;
    }
    .table-haba {
        width: 15% !important
    }
    .button-align {
        margin-left:350px;
        margin-bottom:50px
    }
    .table-height {
        padding-bottom:0px !important
    }
</style>
<div class="container rounded-lg p-3">
    <h3 class="float-left text-justify align-bottom">■テンプレート照会</h3>
    <form class="form-horizontal" method="post" asp-controller="Ta300" asp-action="event_TmpDownload">
        <input type="hidden" name="templete_id" asp-for="@Model.templete_id">
        <input type="hidden" asp-for="@Model.file_name" />
        <input type="hidden" asp-for="@Model.file_binary" />
        <input type="hidden" asp-for="@Model.templete_file_size" />
        <table class="table table-bordered text-center align-middle" colspan='6'>
            <tr>
                <td class="border-hidden table-height" colspan="6" style="border-top:hidden">
                    <p class="float-left text-justify align-bottom" >【テンプレートの基本情報】</p>
                    <button type="submit" class="btn btn-sm btn-outline-primary" style="margin-left:72%">ダウンロード</button>
                </td>
            </tr>
            <tr>
                <th class="table-powder-blue table-haba">
                    テンプレート名
                </th>
                <td colspan="2">@Model.templete_name</td>
                <th class="table-powder-blue table-haba">
                    ファイル名
                </th>
                <td colspan="2">@Model.file_name</td>
            </tr>
            <tr>
                <td class="border-hidden table-height" colspan="6">
                    <p class="float-left text-justify align-bottom">【作成者】</p>
                </td>
            </tr>
            <tr>
                <td class="table-powder-blue table-haba" rowspan="2">
                    会社コード
                </td>
                <td rowspan="2">
                    @Model.reg_com_cd
                </td>
                <td class="table-powder-blue table-haba">
                    所属
                </td>
                <td>
                    @Model.reg_dep1_cd @Model.reg_dep2_cd
                </td>
                <td class="table-powder-blue table-haba">
                    職位
                </td>
                <td>
                    @Model.reg_pos_cd
                </td>
            </tr>
            <tr>
                <td class="table-powder-blue table-haba">
                    作成者
                </td>
                <td>
                    @Model.reg_member_fistname @Model.reg_member_lastname
                </td>
                <td class="table-powder-blue table-haba">
                    作成日付
                </td>
                <td>
                    @Model.reg_date
                </td>
            </tr>
            <tr>
                <td class="border-hidden table-height" colspan="6">
                    <p class="float-left text-justify align-bottom">【更新者】</p>
                </td>
            </tr>
            <tr>
                <td class="table-powder-blue table-haba" rowspan="2">
                    会社コード
                </td>
                <td rowspan="2">
                    @Model.upd_com_cd
                </td>
                <td class="table-powder-blue table-haba">
